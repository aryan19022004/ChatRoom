        }

        #user-list li {
            padding: 8px 12px;
            border-radius: 6px;
            margin-bottom: 5px;
            background: #f8f9fa;
            font-size: 14px;
            font-weight: 500;
            color: #333;
            display: flex;
            align-items: center;
            gap: 10px;
        }

        #user-list li::before {
            content: "ðŸ‘¤";
            /* User icon */
            font-size: 16px;
            color: #007bff;
        }

        .hidden {
            display: none;
        }

        @keyframes fadeIn {
            from {
                opacity: 0;
                transform: translateY(-10px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        @media (max-width: 600px) {
            .chat-container {
                width: 100%;
                height: 100dvh;
                /* Dynamic viewport height */
                border-radius: 0;
                left: 0;
                top: 0;
                position: fixed;
                /* Prevent dragging */
                display: flex;
                flex-direction: column;
            }

            #chat-header {
                position: sticky;
                top: 0;
                /* Ensure it stays fixed at the top */
                z-index: 10;
                /* Make sure it stays above messages */
                width: 100%;
                border-radius: 0;
                flex-shrink: 0;
                /* Prevent shrinking */
            }

            #messages {
                flex: 1;
                overflow-y: auto;
                padding-bottom: 60px;
                /* Ensure space for input box */
                scroll-behavior: smooth;
                /* Smooth scrolling */
            }

            #message-input {
                width: 100%;
                display: flex;
                align-items: center;
                padding: 8px;
                background: white;
                position: fixed;
                bottom: 0;
                /* Keep it above the keyboard */
